<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

<body>
    <referenceContainer name="content">
        <referenceBlock name="smile_store_locator_retailer_view">
            <referenceBlock  name="smile_store_locator_retailer_view.map">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="store-locator-store-view" xsi:type="array">
                                <item name="component" xsi:type="string">smile-map</item>
                                <item name="children" xsi:type="array">
                                    <item name="baners-container" xsi:type="array">
                                        <item name="children" xsi:type="array">
                                            <item name="service-parent" xsi:type="array">
                                                <item name="component" xsi:type="string">uiComponent</item>
                                                <item name="displayArea" xsi:type="string">banner-container</item>
                                                <item name="sortOrder" xsi:type="string">8</item>
                                                <item name="serviceItemTemplate" xsi:type="string">Smile_RetailerService/services-item</item>
                                                <item name="config" xsi:type="array">
                                                    <item name="template" xsi:type="string">Smile_RetailerService/service-wrapper</item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </referenceBlock>
        </referenceBlock>
    </referenceContainer>
</body>
</page>
